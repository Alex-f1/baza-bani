.contacts-block
  padding-bottom: 60px

  @media (max-width: 767px)
    padding-bottom: 30px

  @media (max-width: 479px)
    overflow: hidden

  &__cols
    display: flex
    justify-content: space-between
    flex-wrap: wrap
    margin-left: -20px
    margin-bottom: 40px

    @media (max-width: 479px)
      margin-bottom: 20px

  &__col
    width: 20%
    padding-left: 20px
    margin-bottom: 20px

    @media (max-width: 1279px)
      width: 50% !important

    @media (max-width: 639px)
      width: 100% !important

    &--info-legal
      width: 30%

      @media (max-width: 639px)
        display: none

  &__name
    font-size: 18px
    color: #4B4A4A
    font-weight: 400
    line-height: 1.2
    width: 100%
    margin-bottom: 15px

    @media (max-width: 767px)
      font-size: 16px

  &__phone, &__email, &__schedule
    font-size: 22px
    color: #0C0C0C
    text-decoration: none
    font-weight: 600
    line-height: 1.2
    display: block
    margin-bottom: 30px

    @media (max-width: 1279px)
      margin-bottom: 22px

  &__phone, &__email
    transition: color 0.3s

    &:hover
      color: #3AA531

  &__info-legal
    p
      font-size: 18px
      color: #0C0C0C
      font-weight: 450
      line-height: 1.5
      margin-top: 0
      margin-bottom: 0

  &__social-links
    display: flex
    flex-wrap: wrap

    a
      font-size: 16px
      font-weight: 450
      margin-bottom: 17px
      margin-right: 17px
      padding: 8px 18px
      border-radius: 30px

  &__button-telegram
    background-color: #239CD7
    border-color: #239CD7

  &__button-whatsapp
    background-color: #4DCA5A
    border-color: #4DCA5A

  &__button-vk
    background-color: #328BF1
    border-color: #328BF1

  &__button-youtube
    background-color: #FF0000
    border-color: #FF0000

  &__bottom-cols
    display: flex
    flex-wrap: wrap

  &__bottom-col
    width: 50%

    @media (max-width: 639px)
      width: 100%

    &--mobil-info-legal
      margin-top: 20px

      @media (min-width: 640px)
        display: none

    h3
      font-size: 28px
      color: #0C0C0C
      font-family: $fonts.headings
      font-weight: 700
      line-height: 1.1
      margin-top: 0
      margin-bottom: 20px

    &--imgs
      width: 100%

      & ^[0]
        &__imgs
          margin-left: -15px
          padding-left: 0

          @media (min-width: 640px)
            flex-wrap: nowrap

        &__img
          width: 17%
          padding-left: 15px

          @media (max-width: 639px)
            width: 33.333%

  &__map
    margin-right: 15px
    position: relative

    @media (max-width: 639px)
      margin-bottom: 50px
      margin-right: 0

    img
      vertical-align: top
      width: 100%
      height: 100%
      object-fit: cover
      position: absolute
      top: 0
      left: 0

    &:before
      content: ''
      display: block
      padding-top: 70%

  &__imgs
    display: flex
    flex-wrap: wrap
    margin-left: -30px
    padding-left: 10px

    @media (max-width: 639px)
      margin-left: -15px
      padding-left: 0

    @media (max-width: 479px)
      display: none

  &__img
    width: 50%
    margin-bottom: 20px
    padding-left: 30px

    @media (max-width: 639px)
      padding-left: 15px
      margin-bottom: 15px

    a
      display: block
      overflow: hidden
      position: relative

      &:before
        content: ''
        display: block
        padding-top: 70%

      &:after
        content: ''
        position: absolute
        top: 0
        left: 0
        width: 100%
        height: 100%
        background: linear-gradient(0deg, rgba(0, 0, 0, 0.2), rgba(0, 0, 0, 0.2))

      img
        vertical-align: top
        width: 100%
        height: 100%
        object-fit: cover
        position: absolute
        top: 0
        left: 0

  &__mobile-slider
    padding-bottom: 20px
    margin-bottom: 18px
    overflow: visible

    @media (min-width: 480px)
      display: none

    .swiper-slide
      opacity: 0
      transition: opacity 0.3s

      &.swiper-slide-active, &.swiper-slide-next
        opacity: 1

    & ^[0]
      &__img
        width: 100% !important
        padding-left: 0

    .swiper-button-disabled
      pointer-events: none !important

    .swiper-button-prev, .swiper-button-next
      width: 37px
      height: 37px
      border-radius: 50%
      margin-top: -35px
      background-color: #fff
      transition: background-color 0.3s
      border: 1px solid #4B4A4A
      pointer-events: all
      display: flex
      z-index: 5

      &.swiper-button-lock
        display: none

      &:after
        content: ''
        width: 9px
        height: 15px
        background-image: url("data:image/svg+xml,%3Csvg width='9' height='15' viewBox='0 0 9 15' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M1.46484 13.5703L7.53516 7.5L1.46484 1.42969' stroke='%23000' stroke-width='1.15625' stroke-linecap='round' stroke-linejoin='round'/%3E%3C/svg%3E%0A")
        background-repeat: no-repeat
        background-position: 0 0
        background-size: contain

    .swiper-button-prev
      left: -14px

      &:after
        transform: rotate(180deg)

    .swiper-button-next
      right: -14px

    .swiper-pagination
      bottom: 2px
      display: flex
      justify-content: center

      &.swiper-pagination-lock
        display: none

      .swiper-pagination-bullet
        width: 9px
        height: 9px
        background-color: #BDBDBD
        opacity: 1
        margin-left: 7px
        margin-right: 7px
        transition: background-color 0.3s

        @media (max-width: 767px)
          width: 8px
          height: 8px

        &:hover
          background-color: #3AA531

        &.swiper-pagination-bullet-active
          background-color: #4B4A4A