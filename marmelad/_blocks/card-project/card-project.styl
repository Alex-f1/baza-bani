        order: 1

  &__body
    text-align: center
    display: flex
    flex-direction: column
    align-items: center

    @media (max-width: 1279px)
      display: block
      text-align: left

    h3
      font-size: 28px
      font-family: $fonts.headings
      font-weight: 700
      line-height: 1.3
      margin-top: 0
      margin-bottom: 15px

      @media (max-width: 767px)
        font-size: 22px

    p
      font-size: 18px
      font-weight: 400
      line-height: 1.1
      margin-top: 0
      margin-bottom: 0

.card-project-view
  padding-top: 50px
  padding-bottom: 15px

  @media (max-width: 959px)
    padding-top: 20px

  &__items
    display: flex
    flex-wrap: wrap
    margin-left: -30px

  &__item
    width: 33.333%
    padding-left: 30px
    margin-bottom: 30px

    @media (max-width: 959px)
      width: 50%

    @media (max-width: 479px)
      width: 100%
      margin-bottom: 17px

  &__body
    border: 0.5px solid #4B4A4A
    border-radius: 10px
    padding: 17px

  &__img
    // padding: 17px
    // height: 297px
    // border: 0.5px solid #4B4A4A
    // border-radius: 10px
    // position: relative

    // img
    // vertical-align: top
    // position: absolute
    // top: 50%
    // left: 50%
    // transform: translate(-50%, -50%)
    overflow: hidden
    position: relative

    &:before
      content: ''
      display: block
      padding-top: 80%

    img
      vertical-align: top
      position: absolute
      top: 50%
