.card-project-completed
  padding-top: 45px
  padding-bottom: 40px

  h3
    font-size: 36px
    color: #F5F5F5
    font-family: $fonts.headings
    font-weight: 700
    line-height: 1.3
    text-align: center
    margin-top: 0
    margin-bottom: 30px

    @media (max-width: 767px)
      font-size: 28px
      margin-bottom: 27px

  &__items
    display: flex
    flex-wrap: wrap
    margin-left: -17px

    @media (max-width: 767px)
      margin-left: -7px

  &__item
    width: 14.285%
    padding-left: 17px
    margin-bottom: 17px

    @media (max-width: 767px)
      width: 25%
      padding-left: 7px
      margin-bottom: 7px

    @media (max-width: 374px)
      width: 33.333%

    &:nth-child(4), &:nth-child(5), &:nth-child(6)
      @media (max-width: 767px)
        display: none

    &:nth-child(3)
      @media (max-width: 374px)
        display: none

    &--last-more
      & ^[0]
        &__img
          span
            font-size: 22px
            color: #F5F5F5
            font-family: $fonts.headings
            font-weight: 500
            line-height: 1
            text-align: center
            width: 100%
            position: absolute
            top: 50%
            left: 50%
            transform: translate(-50%, -50%)
            z-index: 2

            @media (max-width: 1279px)
              font-size: 18px

            @media (max-width: 767px)
              font-size: 14px

          &:after
            z-index: 1
            background: linear-gradient(0deg, rgba(0, 0, 0, 0.8), rgba(0, 0, 0, 0.8))

  &__img
    overflow: hidden
    position: relative
    display: block

    &:before
      content: ''
      display: block
      padding-top: 80%

    &:after
      content: ''
      position: absolute
      top: 0
      left: 0
      width: 100%
      height: 100%
      background: linear-gradient(0deg, rgba(0, 0, 0, 0.2), rgba(0, 0, 0, 0.2))
      z-index: 2

    img
      vertical-align: top
      position: absolute
      top: 50%
      left: 50%
      transform: translate(-50%, -50%)

.card-project-layout-options
  h3
    font-size: 36px
    color: #F5F5F5
    font-family: $fonts.headings
    font-weight: 700
    line-height: 1.3
    text-align: center
    margin-top: 0
    margin-bottom: 21px

    @media (max-width: 767px)
      font-size: 28px
      margin-bottom: 20px

  &__navigation
    display: flex
    align-items: center
    justify-content: center
    padding-bottom: 20px
    margin-bottom: 30px

    .swiper-slide
      display: flex
      justify-content: center
      width: auto
      margin-left: auto
      margin-right: auto

    .swiper-scrollbar-horizontal
      height: 8px
      background-color: #4B4A4A
      border-radius: 50px
      overflow: hidden
      bottom: 0

      &:after
        content: ''
        position: absolute
        top: 0
        right: 0
        width: 5px
        height: 100%
        border-radius: 50px
        background-color: #4B4A4A
        z-index: 2

      .swiper-scrollbar-drag
        top: 2.2px
        height: 4px
        background-color: #3AA531
        border-radius: 50px
        margin-left: 5px
        margin-right: 5px
        z-index: 1

    a
      font-size: 20px
      color: #BDBDBD
      font-weight: 450
      line-height: 1.1
      text-decoration: none
      flex: 0 0 auto
      padding-bottom: 5px
      margin-right: 50px
      border-bottom: 2px solid transparent
      flex: 0 0 auto
      transition: color 0.3s, border-bottom-color 0.3s

      @media (max-width: 639px)
        margin-right: 15px

      &._is-active
        color: #3AA531
        border-bottom-color: #3AA531
        pointer-events: none

      &:last-child
        margin-right: 0

      &:hover
        color: #3AA531

  &__layout
    display: none
    flex-wrap: wrap
    justify-content: center
    margin-left: -26px

    &._is-show
      display: flex

  &__img
    width: 50%
    margin-bottom: 26px
    padding-left: 26px
    text-align: center

    @media (max-width: 639px)
      width: 100%
      margin-bottom: 21px

    img
      vertical-align: top

  &__bottom
    padding-top: 91px
    padding-bottom: 73px

    @media (max-width: 767px)
      padding-top: 78px
      padding-bottom: 80px

  &__like-project
    max-width: 970px
    width: 100%
    margin-right: auto
    margin-left: auto
    border-right: 2px solid #BDBDBD
    border-left: 2px solid #BDBDBD
    padding: 20px 100px
    display: flex
    justify-content: space-between
    position: relative

    @media (max-width: 767px)
      padding-right: 50px
      padding-left: 50px

    @media (max-width: 639px)
      padding: 55px 0
      flex-direction: column
      align-items: center
      border: none

    &:before, &:after
      content: ''
      width: 113px
      height: 2px
      position: absolute
      left: 50%
      transform: translateX(-50%)
      background-color: #BDBDBD

      @media (min-width: 640px)
        display: none

    &:before
      top: 0

    &:after
      bottom: 0

  &__text
    @media (max-width: 639px)
      text-align: center
      margin-bottom: 30px

    strong
      font-weight: 500
      color: #F5F5F5
      font-size: 28px
      line-height: 1.2
      display: block
      margin-bottom: 15px

    p
      font-size: 18px
      color: #BDBDBD
      font-weight: 450
      line-height: 1.2
      margin-top: 0
      margin-bottom: 0

  &__like-dislike
    display: flex
    align-items: center

    button
      font-size: 18px
      color: #F5F5F5
      font-weight: 500
      font-family: $fonts.headings
      line-height: 1
      background-color: transparent
      border: none
      cursor: pointer
      padding: 0
      display: flex
      align-items: center

      i
        flex: 0 0 33px
        width: 33px
        max-width: 33px
        margin-right: 13px

  &__likes
    margin-right: 48px

