.pop-up
  color: #F5F5F5
  z-index: 500 !important

  &--video
    .hystmodal__window
      width: 1280px

  &._is-success
    & ^[0]
      &__container
        display: none

      &__success
        display: flex

  .form-feedback
    &.form-feedback--dark
      .form-feedback__container
        padding-bottom: 0
        background-color: transparent

      .form-feedback__inner
        padding-right: 0
        padding-left: 0

      .form-feedback__wrapper
        flex-direction: column

      .form-feedback__fields
        width: auto
        align-self: stretch

      .form-feedback__buttons
        display: flex
        flex-direction: column
        align-items: center

  h3
    font-size: 28px
    font-family: $fonts.headings
    font-weight: 700
    line-height: 1.4
    text-align: center
    margin-top: 15px
    margin-bottom: 36px

    @media (max-width: 959px)
      margin-top: 25px
      margin-bottom: 26px

  &__video
    height: 640px

    @media (max-height: 700px)
      height: 480px

    @media (max-height: 700px) and (max-width: 1280px)
      height: 480px

    @media (max-width: 767px)
      height: 360px

    @media (max-width: 479px)
      height: 300px

    iframe
      width: 100%
      height: 100%
      object-fit: cover

  &__success
    text-align: center
    padding-top: 70px
    padding-bottom: 70px
    flex-direction: column
    align-items: center
    justify-content: center
    display: none

    i
      margin-bottom: 30px
      width: 62px
      max-width: 62px
      height: 62px

    h3
      margin-top: 0 !important
      line-height: 1.1
      margin-bottom: 10px !important

      @media (max-width: 767px)
        font-size: 22px

    p
      font-size: 20px
      color: #F5F5F5
      font-weight: 450
      line-height: 1.2
      margin-top: 0
      margin-bottom: 0

      @media (max-width: 767px)
        font-size: 16px

.hystmodal__wrap
  padding-right: 20px
  padding-left: 20px

.hystmodal__window
  width: 770px
  padding: 53px 100px
  background-color: #000000
  border-radius: 24px
  overflow: hidden

  @media (max-width: 959px)
    padding-right: 50px
    padding-left: 50px

  @media (max-width: 479px)
    padding-right: 25px
    padding-left: 25px

