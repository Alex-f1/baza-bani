    background-repeat: no-repeat
    background-position: 0 0
    background-size: contain

.file-field
  position: relative

  .input-file
    width: 0.1px
    height: 0.1px
    opacity: 0
    overflow: hidden
    position: absolute
    z-index: -1

  label
    font-size: 14px
    color: #BDBDBD
    font-weight: 400
    line-height: 1.2
    display: flex
    align-items: center
    cursor: pointer

