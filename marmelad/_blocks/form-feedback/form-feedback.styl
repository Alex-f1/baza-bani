.form-feedback
  color: #F5F5F5
  position: relative
  overflow: hidden

  @media (max-width: 1279px)
    padding-top: 200px

  @media (max-width: 639px)
    padding-top: 80px

  &:before, &:after
    content: ''
    position: absolute
    bottom: -30px
    background-repeat: no-repeat
    background-position: 0 0
    background-size: contain
    z-index: 5
    pointer-events: none

    @media (max-width: 1599px)
      bottom: -50px

    @media (max-width: 767px)
      bottom: -30px

  &:before
    width: 772px
    height: 144px
    left: -50px
    background-image: url('../img/cloud-pic-left.png')
    z-index: 6

    @media (max-width: 479px)
      display: none

  &:after
    width: 525px
    height: 122px
    right: 0
    background-image: url('../img/cloud-pic-right.png')

    @media (max-width: 767px)
      right: -130px

  &--dark
    @media (max-width: 1279px)
      padding-top: 0 !important

    &:before, &:after
      display: none

    & ^[0]
      &__container
        .form-feedback__inner
          max-width: 1210px
          width: 100%
          padding-right: 20px
          padding-left: 20px
          margin: 0 auto

        .privacy-policy
          transform: translateX(0)

      &__head
        h2
          text-align: left

      &__wrapper
        max-width: 1071px

      &__fields
        width: 100%
        align-self: flex-end

  &--light
    @media (max-width: 1279px)
      padding-top: 0 !important

    &:before, &:after
      display: none

    & ^[0]
      &__container
        background-color: transparent

        .form-feedback__inner
          max-width: 1210px
          width: 100%
          padding-right: 20px
          padding-left: 20px
          margin: 0 auto

        .input-field
          input
            color: #4B4A4A

          ::placeholder
            color: #4B4A4A

        .privacy-policy
          transform: translateX(0)
          color: #4B4A4A

          &:before
            background-image: url("data:image/svg+xml,%3Csvg width='16' height='14' viewBox='0 0 16 14' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath fill-rule='evenodd' clip-rule='evenodd' d='M14.8719 0.87022C15.1524 1.13307 15.1524 1.55924 14.8719 1.82209L7.69013 8.55286C7.40966 8.81572 6.95493 8.81572 6.67447 8.55286L4.51992 6.53363C4.23945 6.27078 4.23945 5.84461 4.51992 5.58176C4.80039 5.31891 5.25512 5.31891 5.53558 5.58176L7.1823 7.12505L13.8563 0.87022C14.1368 0.607367 14.5915 0.607367 14.8719 0.87022Z' fill='%234B4A4A'/%3E%3Cpath fill-rule='evenodd' clip-rule='evenodd' d='M2.15455 1.34615C1.96407 1.34615 1.7814 1.41707 1.64671 1.54329C1.51203 1.66952 1.43636 1.84072 1.43636 2.01923V11.4423C1.43636 11.6208 1.51203 11.792 1.64671 11.9182C1.7814 12.0445 1.96407 12.1154 2.15455 12.1154H12.2091C12.3996 12.1154 12.5822 12.0445 12.7169 11.9182C12.8516 11.792 12.9273 11.6208 12.9273 11.4423V6.73077C12.9273 6.35904 13.2488 6.05769 13.6455 6.05769C14.0421 6.05769 14.3636 6.35904 14.3636 6.73077V11.4423C14.3636 11.9778 14.1366 12.4914 13.7326 12.8701C13.3285 13.2488 12.7805 13.4615 12.2091 13.4615H2.15455C1.58312 13.4615 1.03511 13.2488 0.631052 12.8701C0.226996 12.4914 0 11.9778 0 11.4423V2.01923C0 1.4837 0.226996 0.970098 0.631052 0.591419C1.03511 0.21274 1.58312 0 2.15455 0H10.0545C10.4512 0 10.7727 0.301347 10.7727 0.673077C10.7727 1.04481 10.4512 1.34615 10.0545 1.34615H2.15455Z' fill='%234B4A4A'/%3E%3C/svg%3E%0A")

          a
            color: #4B4A4A

            &:hover
              color: #3aa531

      &__head
        h2
          text-align: left

      &__wrapper
        max-width: 1071px

      &__fields
        width: 100%
        align-self: flex-end

  &__top
    height: 500px
    position: relative
    background-image: url('../img/grass-pic.png')
    background-repeat: no-repeat
    background-position: 50% 100%
    margin-bottom: -100px

    @media (max-width: 1279px)
      height: 290px
      border-radius: 10px 10px 0 0

    @media (max-width: 639px)
      height: 235px

    &:after
      content: ''
      position: absolute
      bottom: 0
      left: 0
      width: 100%
      height: 213px
      background-color: #0C0C0C
      z-index: -1

    & ^[0]
      &__inner
        max-width: 1283px
        width: 100%
        margin-right: auto
        margin-left: auto

  &__pic
    max-width: 606px
    margin-left: 80px

    @media (max-width: 1279px)
      margin-left: 40px
      position: absolute
      top: -200px
      left: 0

    @media (max-width: 959px)
      margin-left: 0

    @media (max-width: 639px)
      top: -80px
      max-width: 270px

    img
      vertical-align: top

  &__form
    position: relative
    z-index: 5

  &__container
    background-color: #0C0C0C
    padding-bottom: 68px

    & ^[0]
      &__inner
        max-width: 863px + 20px + 20px
        margin-right: auto
        margin-left: auto
        padding-right: 20px
        padding-left: 20px

  &__head
    margin-bottom: 24px

    h2
      font-size: 40px
      color: #F5F5F5
      font-family: $fonts.headings
      font-weight: 700
      line-height: 1.1
      margin-top: 0
      margin-bottom: 5px

      @media (max-width: 639px)
        font-size: 28px
        margin-bottom: 10px

  &__desc
    font-size: 18px
    color: #BDBDBD
    font-weight: 400
    line-height: 1.5

  &__wrapper
    display: flex

    @media (max-width: 959px)
      display: block

  &__fields
    display: flex
    flex-wrap: wrap
    margin-left: -30px

    .input-field
      width: 50%
      padding-left: 30px

      @media (max-width: 767px)
        width: 100%

  &__buttons
    margin-left: 30px
    flex: 0 0 auto

    @media (max-width: 959px)
      margin-left: 0

    .file-field
      margin-bottom: 38px

      @media (max-width: 959px)
        margin-bottom: 15px

    .privacy-policy
      @media (min-width: 960px)
        margin-top: 13px
        transform: translateX(-295px)

      @media (max-width: 959px)
        margin-top: 10px

.input-field
  margin-bottom: 36px

  &._is-error
    input
      color: #FF0000
      border-bottom-color: #FF0000

    ::placeholder
      color: #FF0000

  input
    font-size: 18px
    color: #BDBDBD
    font-weight: 400
    line-height: 1
    width: 100%
    border: none
    background-color: transparent
    border-bottom: 1px solid #BDBDBD
    height: 43px
    padding: 0 0 13px 0
    outline: none !important

  ::placeholder
    font-size: 18px
    color: #BDBDBD
    font-weight: 400
    line-height: 1

  select
    opacity: 0
    visibility: hidden

  .choices
    height: 100%

    &.is-open
      &:after
        margin-top: 0

    &:after
      content: ''
      width: 14px
      height: 8px
      border: none
      right: 0
      top: 13px
      margin-top: 0
      pointer-events: all
      background-image: url("data:image/svg+xml,%3Csvg width='14' height='8' viewBox='0 0 14 8' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M1 1L7 7L13 1' stroke='%23BDBDBD' stroke-width='1.78125' stroke-linecap='round' stroke-linejoin='round'/%3E%3C/svg%3E%0A")
      background-repeat: no-repeat
      background-position: 0 0
      background-size: contain

    .choices__inner
      font-size: 18px
      color: #BDBDBD
      font-weight: 400
      line-height: 1
      background-color: transparent
      border: none
      border-bottom: 1px solid #BDBDBD
      border-radius: 0
      padding: 6px 0 13px 0
      min-height: auto
      height: 100%
      outline: none !important

    .choices__list--single
      padding: 0

      .choices__placeholder
        color: #bdbdbd
        opacity: 1

    .choices__list--dropdown
      margin-top: 2px
      background-color: #000
      border: none

      .choices__item
        font-size: 18px
        color: #FFFFFF
        font-weight: 400
        line-height: 1.5
        padding: 5px !important

        &.choices__placeholder
          display: none

        &:after
          display: none

        &.is-highlighted
          color: #3AA531
          background-color: transparent !important

.privacy-policy
  font-size: 14px
  color: #BDBDBD
  font-weight: 400
  line-height: 1.2
  display: flex
  align-items: center

  a
    color: #BDBDBD
    text-decoration: none
    transition: color 0.3s

    &:hover
      color: #3aa531

  &:before
    content: ''
    flex: 0 0 16px
    width: 16px
    max-width: 16px
    height: 14px
    margin-right: 6px
