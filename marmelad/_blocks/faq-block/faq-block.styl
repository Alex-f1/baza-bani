.faq-block
  padding-bottom: 123px

  @media (max-width: 767px)
    padding-bottom: 54px

  &__item
    padding-bottom: 38px

    @media (max-width: 767px)
      padding-bottom: 10px

    &:last-child
      margin-bottom: 0

      @media (max-width: 767px)
        border-bottom: 1px solid #BDBDBD

  &__body
    display: flex

    @media (max-width: 767px)
      display: block

  &__question, &__answer
    padding-top: 35px
    border-top: 1px solid #BDBDBD

  &__question
    flex: 0 0 370px
    width: 370px
    max-width: 370px
    margin-right: 130px
    padding-bottom: 38px

    @media (max-width: 1279px)
      flex: 0 0 330px
      width: 330px
      max-width: 330px
      margin-right: 60px

    @media (max-width: 767px)
      width: 100%
      max-width: 100%
      padding-top: 20px
      padding-bottom: 15px

    h5
      font-size: 18px
      color: #0C0C0C
      font-family: $fonts.headings
      font-weight: 700
      line-height: 1.3
      margin-top: 0
      margin-bottom: 0

      @media (max-width: 767px)
        font-size: 20px

  &__answer
    flex: 1 1 auto
    // height: 98px
    overflow: hidden
    position: relative

    @media (max-width: 767px)
      border-top: none
      padding-top: 0

    &._is-collapsed
      cursor: pointer

      &:after
        display: block

    &:after
      content: ''
      position: absolute
      bottom: -25px
      left: 0
      width: 100%
      height: 56px
      background: linear-gradient(180deg, rgba(245, 245, 245, 0) -13.64%, #F5F5F5 40.91%)
      display: none

      @media (max-width: 767px)
        bottom: -15px

    p
      font-size: 18px
      color: #4B4A4A
      font-weight: 400
      line-height: 1.4
      margin-top: 0
      margin-bottom: 15px
      display: none

      @media (max-width: 767px)
        font-size: 16px
        line-height: 1.2

      &:last-child
        margin-bottom: 0
