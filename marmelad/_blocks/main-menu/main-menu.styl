.main-menu
  &__nav
    ul
      list-style: none
      display: flex
      align-items: center
      padding-left: 0
      margin: 0

      li
        margin-right: 40px
        position: relative

        &:hover
          a
            color: #3AA531

          ul
            opacity: 1
            visibility: visible
            transform: translateY(0)

        &:last-child
          margin-right: 0

        a
          font-size: 20px
          color: #F5F5F5
          font-weight: 450
          line-height: 1
          text-decoration: none
          transition: color 0.3s

        ul
          display: block
          background-color: #0C0C0C
          padding: 24px 20px 24px 30px
          position: absolute
          top: 100%
          left: -30px
          width: 264px
          margin-top: 24px
          opacity: 0
          visibility: hidden
          transform: translateY(5px)
          transition: opacity 0.5s, transform 0.5s, ease 0.5s

          &:before
            content: ''
            width: 100%
            height: 24px
            top: -24px
            left: 0
            position: absolute

          li
            margin-right: 0
            margin-bottom: 20px
            width: fit-content

            &:last-child
              margin-bottom: 0

            &:hover
              a
                color: #3AA531 !important
                border-color: #3AA531

            a
              color: #F5F5F5 !important
              border-bottom: 1px solid transparent
              transition: color 0.3s, border-color 0.3s