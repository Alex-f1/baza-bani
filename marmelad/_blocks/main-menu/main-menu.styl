.main-menu
  @media (max-width: 1023px)
    order: -1
    position: absolute
    top: 100%
    left: 0
    width: 100%
    height: 100vh
    opacity: 0
    visibility: hidden
    transition: opacity 0.5s, background-color 0.5s, ease 0.3s
    z-index: 100

  &._is-active
    opacity: 1
    visibility: visible
    background-color: rgba(0, 0, 0, 0.7)

    & ^[0]
      &__nav
        transform: translateX(0)

  &__nav
    @media (max-width: 1023px)
      height: 100%
      overflow-y: auto
      padding: 20px
      background-color: #000
      width: 320px
      transform: translateX(-320px)
      transition: transform 0.5s

    ul
      list-style: none
      display: flex
      align-items: center
      padding-left: 0
      margin: 0

      @media (max-width: 1023px)
        display: block
        margin-bottom: 80px

      li
        margin-right: 40px
        position: relative

        @media (max-width: 1279px)
          margin-right: 25px

        @media (max-width: 1023px)
          margin-right: 0
          margin-bottom: 15px

        &.sub-menu
          padding-right: 20px

          @media (max-width: 1023px)
            padding-right: 0

          .sub-menu-trigger
            position: absolute
            top: 9px
            right: 0
            width: 14px
            height: 8px
            background-image: url("data:image/svg+xml,%3Csvg width='14' height='8' viewBox='0 0 14 8' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M1 1L7 7L13 1' stroke='%23F5F5F5' stroke-width='1.78125' stroke-linecap='round' stroke-linejoin='round'/%3E%3C/svg%3E%0A")
            background-repeat: no-repeat
            background-position: 0 0
            background-size: contain
            transition: background 0.3s, transform 0.3s
            z-index: 2

            @media (max-width: 1023px)
              cursor: pointer

        &._is-active
          a
            color: #3AA531

          .sub-menu-trigger
            transform: rotate(180deg)
            background-image: url("data:image/svg+xml,%3Csvg width='14' height='8' viewBox='0 0 14 8' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M1 1L7 7L13 1' stroke='%233AA531' stroke-width='1.78125' stroke-linecap='round' stroke-linejoin='round'/%3E%3C/svg%3E%0A")

          ul
            display: block

        &:hover
          .sub-menu-trigger
            @media (min-width: 1024px)
              transform: rotate(180deg)
              background-image: url("data:image/svg+xml,%3Csvg width='14' height='8' viewBox='0 0 14 8' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M1 1L7 7L13 1' stroke='%233AA531' stroke-width='1.78125' stroke-linecap='round' stroke-linejoin='round'/%3E%3C/svg%3E%0A")

          a
            @media (min-width: 1024px)
              color: #3AA531

          ul
            @media (min-width: 1024px)
              opacity: 1
              visibility: visible
              transform: translateY(0)

        &:last-child
          margin-right: 0

        a
          font-size: 20px
          color: #F5F5F5
          font-weight: 450
          line-height: 1
          text-decoration: none
          transition: color 0.3s

        ul
          display: block
          background-color: #0C0C0C
          padding: 24px 20px 24px 30px
          position: absolute
          top: 100%
          left: -30px
          width: 264px
          margin-top: 24px
          margin-bottom: 0
          opacity: 0
          visibility: hidden
          transition: opacity 0.5s, transform 0.5s, ease 0.5s

          @media (min-width: 1024px)
            transform: translateY(5px)

          @media (max-width: 1023px)
            margin-top: 10px
            width: 100%
            position: static
            display: none
            opacity: 1
            visibility: visible

          &:before
            content: ''
            width: 100%
            height: 24px
            top: -24px
            left: 0
            position: absolute

          li
            margin-right: 0
            margin-bottom: 20px
            width: fit-content

            &:last-child
              margin-bottom: 0

            &:hover
              a
                color: #3AA531 !important
                border-color: #3AA531

            a
              color: #F5F5F5 !important
              border-bottom: 1px solid transparent
              transition: color 0.3s, border-color 0.3s