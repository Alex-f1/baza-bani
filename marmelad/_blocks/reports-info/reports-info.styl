.reports-info
  padding-top: 91px
  padding-bottom: 98px
  background-color: #F5F5F5

  @media (max-width: 959px)
    padding-top: 54px
    padding-bottom: 60px

  @media (max-width: 767px)
    padding-bottom: 44px

  &__content
    display: flex
    align-items: flex-end
    margin-bottom: 80px

    @media (max-width: 959px)
      margin-bottom: 44px

    @media (max-width: 767px)
      flex-direction: column

    &:last-child
      margin-bottom: 0

    &:nth-child(even)
      & ^[0]
        &__text
          order: 1

        &__img
          margin-left: 0
          margin-right: 78px

          @media (max-width: 959px)
            margin-left: 0
            margin-right: 25px

          @media (max-width: 767px)
            margin-right: 0

  &__text
    @media (max-width: 767px)
      order: 1 !important

    h2
      font-size: 40px
      color: #0C0C0C
      font-family: $fonts.headings
      font-weight: 700
      line-height: 1.2
      margin-top: 0
      margin-bottom: 28px

      @media (max-width: 959px)
        font-size: 30px
        margin-bottom: 18px

    p
      font-size: 20px
      color: #4B4A4A
      font-weight: 400
      line-height: 1.2
      margin-top: 0
      margin-bottom: 26px

      @media (max-width: 959px)
        font-size: 18px

    strong
      font-size: 22px
      color: #0C0C0C
      font-weight: 450
      line-height: 1.1
      display: block
      margin-bottom: 16px

      @media (max-width: 959px)
        font-size: 20px
        margin-bottom: 20px

    ol
      list-style: none
      padding-left: 0
      margin: 0
      counter-reset: list-number

      li
        font-size: 20px
        color: #4B4A4A
        font-weight: 400
        line-height: 1.2
        display: flex

        @media (max-width: 959px)
          font-size: 18px

        &:before
          content: '0' counter(list-number)
          counter-increment: list-number
          font-size: 20px
          color: #3AA531
          font-weight: 450
          line-height: 1.2
          margin-right: 7px

          @media (max-width: 959px)
            font-size: 18px

  &__img
    flex: 0 0 352px
    width: 352px
    max-width: 352px
    margin-left: 78px

    @media (max-width: 959px)
      margin-left: 25px

    @media (max-width: 767px)
      flex: none
      width: 100%
      max-width: 100%
      margin-right: 0
      margin-bottom: 25px

    img
      vertical-align: top
