.our-advantages
  padding-top: 93px
  padding-bottom: 79px
  overflow-x: hidden

  @media (max-width: 767px)
    padding-top: 33px
    padding-bottom: 12px

  h2
    font-size: 40px
    color: #0C0C0C
    font-family: $fonts.headings
    font-weight: 700
    line-height: 1.2
    text-align: center
    margin-top: 0
    margin-bottom: 62px

    @media (max-width: 767px)
      font-size: 30px
      margin-bottom: 42px

  h3
    font-size: 22px
    color: #0C0C0C
    font-family: $fonts.headings
    font-weight: 700
    line-height: 1.2
    margin-top: 0
    margin-bottom: 10px

  p
    font-size: 18px
    color: #0C0C0C
    font-weight: 400
    line-height: 1.3
    margin-top: 0
    margin-bottom: 0

  &__material-items
    @media (min-width: 1280px)
      margin-right: -50px
      margin-left: -50px

  &__material-item
    display: flex
    align-items: center
    margin-bottom: 23px

    @media (max-width: 767px)
      display: block
      margin-bottom: 30px

    &:nth-child(even)
      & ^[0]
        &__material-img
          @media (min-width: 768px)
            margin-left: -134px
            margin-right: 0

        &__material-content
          @media (min-width: 768px)
            order: -1

  &__material-img
    flex: 0 0 670px
    max-width: 670px
    width: 670px
    height: 264px
    overflow: hidden
    position: relative
    margin-right: -134px

    @media (max-width: 1023px)
      flex: 0 0 470px
      max-width: 470px
      width: 470px

    @media (max-width: 959px)
      height: 320px

    @media (max-width: 767px)
      width: 100%
      max-width: 100%

    @media (max-width: 479px)
      height: 134px

    &:before
      content: ''
      position: absolute
      top: 0
      left: 0
      width: 100%
      height: 100%
      background: linear-gradient(0deg, rgba(0, 0, 0, 0.4), rgba(0, 0, 0, 0.4))

    img
      vertical-align: top
      width: 100%
      height: 100%
      object-fit: cover

  &__material-content
    padding: 40px 70px 40px 120px
    background-color: #fff
    position: relative
    z-index: 2

    @media (min-width: 768px)
      box-shadow: 0px 4px 15px rgba(0, 0, 0, 0.1)

    @media (max-width: 1279px)
      padding: 30px

    @media (max-width: 1279px)
      padding: 23px 0

  &__container
    margin-top: 82px
    height: 838px
    display: flex

    @media (max-width: 959px)
      display: block
      margin-top: 20px
      height: auto

  &__img
    flex: 0 0 570px
    width: 570px
    max-width: 570px
    height: 100%
    margin-right: 60px

    @media (max-width: 1279px)
      flex: 0 0 470px
      width: 470px
      max-width: 470px
      margin-right: 30px

    @media (max-width: 959px)
      width: 100%
      max-width: 100%
      height: 351px
      margin-bottom: 44px

    @media (max-width: 479px)
      height: 416px

    @media (max-width: 374px)
      height: 280px

    img
      vertical-align: top
      width: 100%
      height: 100%
      object-fit: cover

  &__item
    @media (max-width: 479px)
      display: block

  &__number
    font-size: 56px
    color: #0C0C0C
    font-family: $fonts.headings
    font-style: normal
    font-weight: 700
    line-height: 1.1
    min-width: 80px
    padding-top: 69px

    @media (max-width: 1279px)
      padding-top: 30px

    @media (max-width: 959px)
      padding-top: 0
      font-size: 46px

    @media (max-width: 479px)
      font-size: 36px
      margin-bottom: 21px

  &__content
    display: flex
    flex-direction: column
    justify-content: flex-end
    width: 524px
    margin-left: 50px
    padding-top: 115px
    padding-left: 30px
    border-left: 1px solid #BDBDBD

    @media (max-width: 1279px)
      padding-top: 76px
      padding-bottom: 50px
      padding-left: 30px
      margin-left: 25px

    @media (max-width: 959px)
      padding-top: 0
      padding-bottom: 0
      padding-left: 0
      border-left: none
      max-width: 100%
      width: 100%
      margin-bottom: 37px

    @media (max-width: 479px)
      margin-left: 0

    h3
      position: relative

      &:before
        content: ''
        position: absolute
        top: -34px
        left: -32px
        width: 3px
        height: 38px
        background-color: #3AA531

        @media (max-width: 959px)
          display: none

  &__item
    display: flex