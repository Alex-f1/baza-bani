.share-block
  padding-top: 25px
  padding-bottom: 25px

  @media (max-width: 767px)
    padding-top: 10px
    padding-bottom: 10px

  &__items
    display: flex
    flex-wrap: wrap
    margin-left: -30px

    @media (max-width: 767px)
      display: block

  &__item
    padding-left: 30px

    @media (min-width: 768px)
      width: 50%

    @media (max-width: 767px)
      margin-top: 24px !important

    &:first-child
      width: 100%

      @media (max-width: 767px)
        margin-top: 0 !important

  &__item:not(:first-child)
    margin-top: 40px

    .share-thumb
      &__body
        @media (min-width: 1280px)
          padding-left: 100px

        @media (min-width: 768px)
          padding-left: 50px

      &__content
        @media (min-width: 1280px)
          width: 47.4%
          padding-right: 40px
          padding-left: 40px
          min-height: 215px

        @media (min-width: 768px)
          width: 55%
          padding-right: 20px
          padding-left: 20px

        h2
          @media (min-width: 768px)
            font-size: 22px
            line-height: 1.1

        p
          @media (min-width: 768px)
            font-size: 18px

        &:after
          @media (min-width: 768px)
            bottom: 26px
            right: -40px
            width: 58px
            height: 6px

      &__img
        @media (min-width: 768px)
          height: 320px

      &__note
        @media (min-width: 1280px)
          width: 60%

        @media (min-width: 768px)
          font-size: 12px
          padding-right: 20px
          padding-left: 20px

.share-thumb
  width: 100%
  height: 100%

  &__body
    height: 100%
    padding-left: 300px

    @media (max-width: 1279px)
      padding-left: 200px

    @media (max-width: 767px)
      padding-left: 0
      margin-right: -20px
      margin-left: -20px

    @media (min-width: 768px)
      display: flex
      position: relative
      align-items: center

  &__content
    padding: 45px 52px
    background-color: #0C0C0C
    width: 40.2%
    min-height: 208px
    z-index: 2
    display: flex
    flex-direction: column
    justify-content: center

    @media (max-width: 1279px)
      padding-right: 30px
      padding-left: 30px

    @media (max-width: 767px)
      margin-right: auto
      margin-left: auto
      width: 90%
      padding: 45px 40px
      min-height: 183px
      margin-bottom: -16px

    @media (min-width: 768px)
      position: absolute
      top: 50%
      left: 0
      transform: translateY(-50%)

    h2
      font-size: 36px
      color: #F5F5F5
      font-family: $fonts.headings
      font-weight: 700
      line-height: 1.1
      margin-top: 0
      margin-bottom: 10px

      @media (max-width: 767px)
        font-size: 28px

    p
      font-size: 20px
      color: #F5F5F5
      font-weight: 400
      line-height: 1.2
      margin-top: 0
      margin-bottom: 0

      @media (max-width: 767px)
        font-size: 16px
        position: relative
        padding-bottom: 10px

      &:after
        content: ''
        position: absolute
        bottom: 0
        left: 0
        width: 101px
        height: 2px
        background-color: #3AA531

        @media (min-width: 768px)
          display: none

    &:after
      content: ''
      position: absolute
      bottom: 35px
      right: -70px
      width: 101px
      height: 10px
      background-color: #3AA531

      @media (max-width: 767px)
        display: none

  &__img
    width: 100%
    height: 380px
    overflow: hidden
    position: relative

    @media (max-width: 767px)
      height: 260px

    @media (max-width: 479px)
      height: 198px

    @media (min-width: 768px)
      border-radius: 10px

    &:before
      content: ''
      position: absolute
      top: 0
      left: 0
      width: 100%
      height: 100%
      background: linear-gradient(0deg, rgba(40, 40, 40, 0.5), rgba(40, 40, 40, 0.5))

    img
      vertical-align: top
      width: 100%
      height: 100%
      object-fit: cover

  &__note
    font-size: 18px
    color: #F5F5F5
    font-weight: 450
    line-height: 1.2
    width: 50%
    background-color: #0C0C0C
    padding: 8px 40px 10px 40px
    position: absolute
    right: 0
    bottom: 0

    @media (max-width: 1279px)
      width: 60%

    @media (max-width: 767px)
      font-size: 16px
      font-weight: 400
      width: 100%
      padding-left: 20px
      padding-right: 20px