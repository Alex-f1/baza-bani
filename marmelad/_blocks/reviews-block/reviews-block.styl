.reviews-block
  padding-top: 82px
  padding-bottom: 64px
  background-color: #F5F5F5

  @media (max-width: 767px)
    padding-top: 44px
    padding-bottom: 30px
    background-color: #fff

  &--single
    padding-top: 0 !important
    padding-bottom: 37px !important
    background-color: transparent !important

    .main-swiper-nav, .main-swiper-pagination
      display: none !important

    .review-thumb__pics
      pointer-events: all

      .swiper-button-prev, .swiper-button-next
        bottom: 92px

        @media (max-width: 1279px)
          bottom: 64px

        @media (max-width: 959px)
          bottom: 36px

        @media (max-width: 767px)
          bottom: 120px

        @media (max-width: 639px)
          bottom: 84px

        @media (max-width: 479px)
          bottom: 64px

        @media (max-width: 374px)
          bottom: 54px

      .swiper-pagination
        @media (max-width: 767px)
          position: fixed
          bottom: -25px
          display: flex

    & ^[0]
      &__main
        @media (max-width: 767px)
          overflow: visible

      &__items
        flex-wrap: wrap
        pointer-events: none

      &__item
        margin-bottom: 30px

        &:last-child
          margin-bottom: 0

        @media (max-width: 767px)
          margin-bottom: 60px

  &__inner
    max-width: 1264px
    width: 100%
    margin-left: auto
    margin-right: auto
    padding-right: 20px
    padding-left: 20px
    margin-right: auto
    margin-left: auto

  h2
    font-size: 40px
    color: #0C0C0C
    font-family: $fonts.headings
    font-weight: 700
    line-height: 1.2
    text-align: center
    margin-top: 0
    margin-bottom: 45px

    @media (max-width: 767px)
      font-size: 30px
      margin-bottom: 30px

  &__review
    position: relative

    .swiper-button-prev, .swiper-button-next
      width: 57px
      height: 57px
      margin-top: -130px
      border-radius: 50%
      background-color: #4B4A4A
      transition: background-color 0.3s
      pointer-events: all

      &.main-swiper-nav
        @media (max-width: 767px)
          display: none

      &:hover
        background-color: #3AA531

      &:after
        content: ''
        width: 13px
        height: 21px
        background-image: url("data:image/svg+xml,%3Csvg width='13' height='21' viewBox='0 0 13 21' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M1.82422 19.8516L11.1758 10.5L1.82422 1.14844' stroke='white' stroke-width='1.78125' stroke-linecap='round' stroke-linejoin='round'/%3E%3C/svg%3E%0A")
        background-repeat: no-repeat
        background-position: 0 0
        background-size: contain

    .swiper-button-prev
      left: -10px

      &:after
        transform: rotate(180deg)

    .swiper-button-next
      right: -10px

    .swiper-pagination
      bottom: 0px
      display: flex
      justify-content: center

      &.main-swiper-pagination
        @media (min-width: 768px)
          display: none

      .swiper-pagination-bullet
        width: 9px
        height: 9px
        background-color: #BDBDBD
        opacity: 1
        margin-left: 7px
        margin-right: 7px
        transition: background-color 0.3s

        @media (max-width: 767px)
          width: 8px
          height: 8px

        &:hover
          background-color: #3AA531

        &.swiper-pagination-bullet-active
          background-color: #4B4A4A

  &__main
    padding-left: 18px
    padding-right: 18px

    @media (max-width: 767px)
      padding-right: 0
      padding-left: 0
      padding-bottom: 35px

  &__bottom
    display: flex
    justify-content: center
    padding-top: 29px

    @media (max-width: 767px)
      padding-top: 30px

.review-thumb
  &__body
    display: flex

    @media (max-width: 767px)
      flex-direction: column
      border: 1.26394px solid #BDBDBD
      border-radius: 12.6394px
      padding: 31px 18px

  &__doc
    flex: 0 0 269px
    width: 269px
    max-width: 269px
    height: auto
    background-color: #FFFFFF
    border: 1px solid #BDBDBD
    border-radius: 10px
    overflow: hidden
    display: flex
    flex-direction: column
    justify-content: center
    align-items: center
    margin-right: 31px
    margin-bottom: 24px

    @media (max-width: 767px)
      flex: none
      width: 100%
      max-width: 100%
      height: 385px
      margin-bottom: 34px
      border: none

  &__doc-img
    img
      vertical-align: top

  &__content
    border: 1px solid #BDBDBD
    border-radius: 10px
    align-self: flex-start
    padding: 20px 39px
    margin-bottom: 19px

    @media (max-width: 767px)
      border: none
      padding: 0

    h3
      font-size: 22px
      color: #0C0C0C
      font-weight: 500
      line-height: 1.2
      margin-top: 0
      margin-bottom: 15px

      @media (max-width: 767px)
        font-size: 20px
        margin-bottom: 18px

  &__public
    display: flex
    align-items: center
    margin-bottom: 15px

  &__rating
    margin-right: 18px

    ul
      list-style: none
      display: flex
      align-items: center
      padding-left: 0
      margin: 0

      li
        width: 20px
        height: 20px
        margin-right: 5px

        &:last-child
          margin-right: 0

  &__date
    font-size: 16px
    color: #4B4A4A
    font-weight: 400
    line-height: 1.1

  &__project-name
    font-size: 16px
    color: #0C0C0C
    font-weight: 500
    line-height: 1.2
    margin-bottom: 15px

    strong
      margin-right: 8px

    span
      font-weight: 400

  &__text
    font-size: 16px
    color: #4B4A4A
    font-weight: 400
    line-height: 1.4
    padding-bottom: 10px

  &__pics
    position: relative

    .swiper-button-disabled
      pointer-events: none !important

    .swiper-button-prev, .swiper-button-next
      width: 37px
      height: 37px
      top: auto
      bottom: 95px
      // margin-top: -40px
      margin-top: 0 !important
      border-radius: 50%
      background-color: #BDBDBD
      transition: background-color 0.3s
      pointer-events: all
      display: flex
      position: fixed
      z-index: 5

      @media (max-width: 1279px)
        bottom: 64px

      @media (max-width: 959px)
        bottom: 36px

      @media (max-width: 767px)
        bottom: 120px

      @media (max-width: 639px)
        bottom: 84px

      @media (max-width: 479px)
        bottom: 64px

      @media (max-width: 374px)
        bottom: 54px

      &.swiper-button-lock
        display: none

      // @media (max-width: 767px)
      //   margin-top: -20px


      &:hover
        background-color: #3AA531

      &:after
        content: ''
        width: 9px
        height: 15px
        background-image: url("data:image/svg+xml,%3Csvg width='9' height='15' viewBox='0 0 9 15' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M1.46484 13.5703L7.53516 7.5L1.46484 1.42969' stroke='white' stroke-width='1.15625' stroke-linecap='round' stroke-linejoin='round'/%3E%3C/svg%3E%0A")
        background-repeat: no-repeat
        background-position: 0 0
        background-size: contain

    .swiper-button-prev
      // left: -18px
      left: 282px

      @media (max-width: 767px)
        left: 2px

      &:after
        transform: rotate(180deg)

    .swiper-button-next
      right: -18px

      @media (max-width: 767px)
        right: 2px

    .swiper-pagination
      bottom: 2px
      display: flex
      justify-content: center

      @media (max-width: 767px)
        display: none

      &.swiper-pagination-lock
        display: none

      .swiper-pagination-bullet
        width: 9px
        height: 9px
        background-color: #BDBDBD
        opacity: 1
        margin-left: 7px
        margin-right: 7px
        transition: background-color 0.3s

        @media (max-width: 767px)
          width: 8px
          height: 8px

        &:hover
          background-color: #3AA531

        &.swiper-pagination-bullet-active
          background-color: #4B4A4A

  &__nested:not(.swiper-initialized)
    display: flex
    flex-wrap: nowrap
    overflow: hidden

    & ^[0]
      &__nested-item
        margin-right: 14px
        flex: 0 0 25%

  &__nested
    padding-bottom: 26px

    @media (max-width: 767px)
      padding-bottom: 0

  &__img
    border-radius: 10px
    overflow: hidden
    position: relative

    &:before
      content: ''
      display: block
      padding-top: 70%

    &:after
      content: ''
      position: absolute
      top: 0
      left: 0
      width: 100%
      height: 100%
      background: linear-gradient(0deg, rgba(0, 0, 0, 0.2), rgba(0, 0, 0, 0.2))

    img
      vertical-align: top
      width: 100%
      height: 100%
      object-fit: cover
      position: absolute
      top: 0
      left: 0
