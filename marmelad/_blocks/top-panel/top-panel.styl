    font-weight: 500
    line-height: 1
    display: flex
    align-items: center
    margin-right: 48px
    transition: color 0.3s

    @media (max-width: 1023px)
      margin-right: 20px

    &:hover
      color: #3AA531

    &:before
      content: ''
