.top-panel
  color: #F5F5F5
  position: fixed
  width: 100%
  top: 0
  left: 0
  transition: top 0.3s
  z-index: 50

  &._is-fixed
    top: -60px

    @media (max-width: 1023px)
      top: -50px

  &._is-top-fixed
    top: 0 !important

  .social-links
    @media (max-width: 1023px)
      display: none

  a
    color: #F5F5F5
    text-decoration: none

  &__site-info
    width: 100%
    padding-top: 15px
    padding-bottom: 12px
    background-color: #0C0C0C

    @media (max-width: 1023px)
      padding-top: 16px
      padding-bottom: 16px
      background-color: #282828

  &__inner
    display: flex
    align-items: center

  *:nth-child(2)
    margin-left: auto

  &__schedule
    font-size: 14px
    font-weight: 400
    line-height: 1
    display: flex
    align-items: center
    margin-right: 75px

    @media (max-width: 1023px)
      display: none

