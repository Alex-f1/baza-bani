  &__call
    font-size: 14px
    color: #6BCE07 !important
    font-family: $fonts.headings
    font-weight: 600
    line-height: 1
    display: flex
    align-items: center
    transition: color 0.3s

    @media (max-width: 1023px)
      margin-left: auto

    &:hover
      color: #fff !important

      &:after
        background-image: url("data:image/svg+xml,%3Csvg width='12' height='11' viewBox='0 0 12 11' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M6.2998 1L11.0003 5.5L6.2998 10' stroke='%23fff' stroke-width='1.5' stroke-linecap='round' stroke-linejoin='round'/%3E%3Cpath d='M10.9999 5.5L1 5.5' stroke='%23fff' stroke-width='1.5' stroke-linecap='round' stroke-linejoin='round'/%3E%3C/svg%3E%0A")

    &:after
      content: ''
      flex: 0 0 13px
      width: 13px
      max-width: 13px
      height: 13px
      margin-left: 5px
      background-image: url("data:image/svg+xml,%3Csvg width='12' height='11' viewBox='0 0 12 11' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M6.2998 1L11.0003 5.5L6.2998 10' stroke='%236BCE07' stroke-width='1.5' stroke-linecap='round' stroke-linejoin='round'/%3E%3Cpath d='M10.9999 5.5L1 5.5' stroke='%236BCE07' stroke-width='1.5' stroke-linecap='round' stroke-linejoin='round'/%3E%3C/svg%3E%0A")
      background-repeat: no-repeat
      background-position: 0 0
      background-size: contain
      transition: background 0.3s

  &__navigation
    width: 100%
    padding-top: 24px
    padding-bottom: 20px
    background-color: rgba(12, 12, 12, 0.7)

    @media (max-width: 1023px)
      background-color: #000

    & ^[0]
      &__inner
        justify-content: space-between

        *:nth-child(2)
          margin-left: 0

  &__button-burger
    flex: 0 0 34px
    width: 34px
    max-width: 34px
    height: 34px
    padding: 8px 4px
    background-color: transparent
    border: none
    position: relative
    cursor: pointer

    @media (min-width: 1024px)
      display: none

    span, &:before, &:after
      width: 25px
      height: 2px
      background-color: #F5F5F5
      border-radius: 5px
      position: absolute
      left: 4px
      transition: transform 0.3s, opacity 0.3s, ease 0.3s

    &:before, &:after
      content: ''

    span
      top: 50%
      transform: translateY(-50%)

    &:before
      top: 8px

    &:after
      bottom: 8px

    &._is-active
      span
        opacity: 0
        transform: translate(-8px, -50%)

      &:before
        top: 17px
        transform: rotate(45deg)
        width: 30px

      &:after
        bottom: 15px
        transform: rotate(-45deg)
        width: 30px

.social-links
  &__items
    display: flex
    align-items: center

  &__item
    flex: 0 0 32px
    width: 32px
    max-width: 32px
    height: 32px
    border-radius: 50%
    border: 1px solid #4B4A4A
    position: relative
    transition: border-color 0.3s
    margin-right: 13px

    &:hover
      border-color: transparent

    i
      width: 100%
      height: 100%
      position: relative
      display: block

      img
        vertical-align: top
        position: absolute
        top: 50%
        left: 50%
        transform: translate(-50%, -50%)