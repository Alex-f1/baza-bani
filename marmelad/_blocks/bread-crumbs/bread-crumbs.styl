.bread-crumbs
  font-size: 16px
  color: #4B4A4A
  font-weight: 300
  line-height: 1.2
  flex: none
  padding-top: 160px
  padding-bottom: 40px
  display: flex
  align-items: center
  flex-wrap: wrap

  @media (max-width: 1023px)
    padding-bottom: 25px

  a
    text-decoration: none
    color: #000
    transition: color 0.3s

    &:hover
      color: #3AA531

  &__separator
    color: #000
    margin-left: 0
    padding-left: 5px
    padding-right: 5px
    text-align: center