.step-info
  padding-bottom: 93px

  @media (max-width: 1023px)
    padding-bottom: 63px

  &__inner
    max-width: 1170px + 20px + 20px
    width: 100%
    padding-right: 20px
    padding-left: 20px
    margin-left: auto
    margin-right: auto

    @media (min-width: 1600px)
      max-width: 1744px + 76px + 83px
      padding-left: 76px
      padding-right: 80px
      margin-left: auto
      margin-right: auto

  &__container
    padding-bottom: 40px

    @media (max-width: 1023px)
      padding-bottom: 0

    .swiper-pagination
      bottom: 0
      display: flex
      justify-content: center

      @media (max-width: 1023px)
        display: none

      .swiper-pagination-bullet
        width: 9px
        height: 9px
        background-color: #BDBDBD
        opacity: 1
        margin-left: 7px
        margin-right: 7px
        transition: background-color 0.3s

        @media (max-width: 767px)
          width: 8px
          height: 8px

        &:hover
          background-color: #3AA531

        &.swiper-pagination-bullet-active
          background-color: #4B4A4A

  &__body
    display: flex

  &__main
    display: flex
    padding-right: 20px
    padding-left: 15px
    margin-right: 0
    margin-left: 0

    @media (max-width: 1599px)
      max-width: 100%
      padding-right: 0
      padding-left: 0
      margin-right: 0
      margin-left: 0

    @media (max-width: 1023px)
      display: block

  &__mini-img, &__img
    overflow: hidden
    position: relative

    img
      vertical-align: top
      width: 100%
      height: 100%
      object-fit: cover

    &:after
      content: ''
      position: absolute
      top: 0
      left: 0
      width: 100%
      height: 100%
      background: linear-gradient(0deg, rgba(0, 0, 0, 0.2), rgba(0, 0, 0, 0.2))

  &__mini-img
    flex: 0 0 276px
    align-self: flex-start
    display: none

    @media (min-width: 1600px)
      display: block

    &:before
      content: ''
      display: block
      padding-top: 78%

    img
      position: absolute
      top: 0
      left: 0

  &__img
    flex: 0 0 570px
    width: 570px
    max-width: 570px
    height: 454px
    margin-right: 30px

    @media (max-width: 1023px)
      margin-right: 0
      width: 100%
      max-width: 100%

    @media (max-width: 767px)
      height: 269px

  &__content
    background-color: #000
    min-height: 274px
    padding: 40px 95px 110px 48px
    align-self: flex-end

    @media (max-width: 1279px)
      padding: 30px 30px 110px 30px

    @media (max-width: 1023px)
      padding: 30px 25px 137px 25px

  &__name
    font-size: 22px
    color: #F5F5F5
    font-weight: 700
    line-height: 1
    margin-bottom: 15px

    @media (max-width: 767px)
      font-size: 20px
      margin-bottom: 25px

  &__text
    font-size: 18px
    color: #BDBDBD
    font-weight: 400
    line-height: 1.5

    @media (max-width: 767px)
      font-size: 16px
      line-height: 1.1

  &__bottom
    width: 100%
    position: relative

  &__controls
    display: flex
    align-items: center
    position: absolute
    bottom: 72px
    left: 650px
    z-index: 2

    @media (min-width: 1600px)
      left: 938px

    @media (max-width: 1279px)
      left: 632px

    @media (max-width: 1023px)
      left: 30px
      bottom: 40px

    .swiper-button-disabled
      pointer-events: none !important

    .swiper-button-prev, .swiper-button-next
      position: static
      margin: 0
      width: 37px
      height: 37px
      border-radius: 50%
      background-color: #BDBDBD
      transition: background-color 0.3s
      pointer-events: all

      &:hover
        background-color: #3AA531

        &:after
          background-image: url("data:image/svg+xml,%3Csvg width='9' height='15' viewBox='0 0 9 15' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M1.46484 13.5703L7.53516 7.5L1.46484 1.42969' stroke='white' stroke-width='1.15625' stroke-linecap='round' stroke-linejoin='round'/%3E%3C/svg%3E%0A")

      &:after
        content: ''
        width: 9px
        height: 15px
        background-image: url("data:image/svg+xml,%3Csvg width='9' height='15' viewBox='0 0 9 15' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M1.46484 13.5703L7.53516 7.5L1.46484 1.42969' stroke='%23000' stroke-width='1.15625' stroke-linecap='round' stroke-linejoin='round'/%3E%3C/svg%3E%0A")
        background-repeat: no-repeat
        background-position: 0 0
        background-size: contain
        transition: background 0.3s

    .swiper-button-prev
      &:after
        transform: rotate(180deg)

  &__fraction
    font-size: 18px
    color: #F5F5F5
    font-weight: 400
    line-height: 1.1
    padding-right: 16px
    padding-left: 16px

    i
      font-style: normal
      margin-right: -1px
      margin-left: -1px