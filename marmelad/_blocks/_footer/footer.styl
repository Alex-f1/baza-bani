.footer
  color: #F5F5F5
  flex: none
  padding-top: 38px
  padding-bottom: 42px
  background-color: #000
  position: relative
  overflow: hidden

  @media (max-width: 767px)
    padding-top: 47px
    padding-bottom: 60px

  &:before, &:after
    content: ''
    position: absolute
    bottom: 0
    background-repeat: no-repeat
    background-position: 0 0
    background-size: contain
    z-index: 5
    pointer-events: none

    @media (max-width: 1599px)
      bottom: -50px

    @media (max-width: 767px)
      bottom: -30px

  &:before
    width: 772px
    height: 144px
    left: 0
    background-image: url('../img/cloud-pic-left.png')

    @media (max-width: 479px)
      display: none

  &:after
    width: 525px
    height: 122px
    right: 0
    background-image: url('../img/cloud-pic-right.png')

    @media (max-width: 767px)
      right: -130px

  .logo
    padding-top: 15px
    margin-bottom: 40px

    @media (max-width: 767px)
      margin-bottom: 29px

  .form-feedback
    &.form-feedback--dark
      .form-feedback__container
        padding-bottom: 0
        background-color: transparent

      .form-feedback__inner
        padding-right: 0
        padding-left: 0

      .form-feedback__head
        margin-bottom: 40px

        h2
          font-size: 27px

          @media (max-width: 767px)
            font-size: 22px
            text-align: center

      .form-feedback__wrapper
        display: block

      .form-feedback__fields
        display: block

        @media (max-width: 767px)
          margin-right: 0
          width: auto

        .input-field
          width: 100%

      .privacy-policy
        margin-bottom: 25px

        @media (max-width: 767px)
          order: 1

      .form-feedback__buttons
        margin-left: 0

        @media (max-width: 767px)
          display: flex
          flex-direction: column
          align-items: center

  &__cols
    display: flex

    @media (max-width: 767px)
      flex-direction: column
      align-items: center
      text-align: center

  &__col
    width: 40%

    @media (max-width: 1023px)
      width: 50%

    @media (max-width: 767px)
      width: 100%

    &--menu
      @media (max-width: 1023px)
        display: none

    &--contacts
      width: 20%

      @media (max-width: 1023px)
        padding-left: 50px

      @media (max-width: 767px)
        display: none

  &__mobile
    margin-bottom: 70px

    @media (min-width: 768px)
      display: none

    strong
      font-weight: 400 !important

      @media (max-width: 767px)
        margin-bottom: 15px !important

    .social-links__items
      justify-content: center

    .social-links__item
      flex: 0 0 59px
      width: 59px
      max-width: 59px
      height: 59px

  &__nav
    ul
      list-style: none
      margin: 0
      padding-left: 0

    > ul
      display: flex
      flex-wrap: wrap

      > li
        width: 50%
        padding-left: 30px

        &.last-item
          > a
            opacity: 0
            visibility: hidden

          ul
            padding-top: 35px

            li
              a
                font-weight: 600

        a
          font-size: 18px
          color: #F5F5F5
          font-weight: 600
          line-height: 1.3
          text-decoration: none
          transition: color 0.3s

          &:hover
            color: #3AA531

        ul
          padding-top: 10px

          li
            margin-bottom: 5px

            a
              font-weight: 400

  &__contacts
    strong
      font-size: 16px
      color: #F5F5F5
      font-weight: 600
      line-height: 1.2
      display: block
      margin-bottom: 20px

  &__phones
    margin-bottom: 25px

  &__phone
    font-size: 22px
    color: #F5F5F5
    font-weight: 500
    line-height: 1.2
    text-decoration: none
    transition: color 0.3s

    @media (max-width: 767px)
      font-size: 28px

    &:hover
      color: #3AA531

  &__social
    margin-bottom: 30px

  &__qr-code
    strong
      margin-bottom: 25px

  &__qr-code-pics
    display: flex
    gap: 29px

  &__qr-code-pic
    width: 106px
    text-align: center
    display: flex
    flex-direction: column

    span
      font-size: 16px
      color: #F5F5F5
      font-weight: 400
      line-height: 1.1
      margin-top: 8px

  &__site-info
    font-size: 14px
    color: #F5F5F5
    font-weight: 400
    line-height: 1.2
    display: flex
    margin-left: 42.5%
    padding-top: 20px

    @media (max-width: 1023px)
      margin-left: 0
      padding-top: 25px

    @media (max-width: 767px)
      flex-direction: column
      align-items: center
      text-align: center

    a
      color: #F5F5F5
      text-decoration: none
      transition: color 0.3s

      &:hover
        color: #3AA531

  &__copy
    margin-right: 67px

    @media (max-width: 767px)
      margin-right: 0
      margin-bottom: 24px

  &__privacy-policy
    margin-right: 22px

    @media (max-width: 767px)
      margin-right: 0
      margin-bottom: 24px