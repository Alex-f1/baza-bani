html, body
  margin: 0
  padding: 0

html, body
  min-height: 100vh

.app
  display: grid
  grid-template-rows: auto 1fr auto

.contain
  max-width: 1170px + 20px + 20px
  width: 100%
  padding-right: 20px
  padding-left: 20px
  margin: 0 auto

.button-default
  font-size: 18px
  color: #FFF
  font-family: $fonts.headings
  font-weight: 700
  line-height: 1
  text-decoration: none
  background-color: #3AA531
  border: 1px solid #3AA531
  border-radius: 40px
  display: inline-flex
  align-items: center
  justify-content: center
  padding: 18px 24px
  cursor: pointer
  transition: color 0.3s, border-color 0.3s, background-color 0.3s

  &.button-default--fill
    color: #3AA531
    background-color: #0C0C0C
    border-color: #0C0C0C

    &:hover
      color: #F5F5F5
      border-color: #3AA531
      background-color: #3AA531

  &:hover
    color: #3AA531
    border-color: #3AA531
    background-color: transparent

.main-bg
  background-image: url('../img/bg.png')
  background-repeat: no-repeat
  background-position: 50% 30%
  background-size: auto
  position: relative

  @media (max-width: 767px)
    background: url('../img/bg-mobile.png') no-repeat 50% 0, url('../img/bg-mobile2.png') no-repeat 50% 100%
    background-size: 100%