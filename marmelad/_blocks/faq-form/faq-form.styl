.faq-form
  padding-top: 146px
  padding-bottom: 120px
  background-color: #0C0C0C
  background-image: url('../img/faq-form-bg.png')
  background-repeat: no-repeat
  background-position: 50% 0

  @media (max-width: 767px)
    padding-top: 45px
    padding-bottom: 50px
    background-image: none

  &__inner
    max-width: 770px + 20px + 20px
    width: 100%
    padding-right: 20px
    padding-left: 20px
    margin-right: auto
    margin-left: auto

  &__head
    margin-bottom: 36px

    h2
      font-size: 40px
      color: #F5F5F5
      font-weight: 700
      line-height: 1.1
      margin-top: 0
      margin-bottom: 15px

      @media (max-width: 767px)
        font-size: 28px

    p
      font-size: 18px
      color: #BDBDBD
      font-weight: 400
      line-height: 1.5
      margin-top: 0
      margin-bottom: 0
      max-width: 600px
      width: 100%

      @media (max-width: 767px)
        line-height: 1.3

  &__fields
    display: flex
    flex-wrap: wrap
    margin-left: -30px

    .input-field
      width: 50%
      padding-left: 30px

      @media (max-width: 479px)
        width: 100%

      &:last-child
        width: 100%

  &__buttons
    display: flex
    flex-direction: column
    align-items: center

  &__button-send
    margin-top: 20px