.info-work
  padding-top: 80px
  padding-bottom: 30px
  background-color: #F5F5F5

  @media (max-width: 959px)
    padding-top: 104px
    padding-bottom: 40px

  @media (max-width: 767px)
    padding-top: 120px

  &--self
    padding-top: 10px !important
    padding-bottom: 20px !important
    background-color: transparent

    & ^[0]
      &__inner
        &:after
          display: none

  &__inner
    position: relative

    &:after
      content: ''
      position: absolute
      top: -178px
      right: 114px
      width: 374px
      height: 264px
      background-image: url('../img/decor-pic.png')
      background-repeat: no-repeat
      background-position: 0 0
      background-size: contain

      @media (max-width: 1279px)
        right: 0

      @media (max-width: 959px)
        width: 200px
        height: 140px
        right: 50%
        transform: translateX(75%)
        margin-left: 50px

      @media (max-width: 767px)
        top: -160px

  h2
    font-size: 40px
    color: #0C0C0C
    font-family: $fonts.headings
    font-weight: 700
    line-height: 1.2
    margin-top: 0
    margin-bottom: 62px

    @media (max-width: 959px)
      text-align: center

    @media (max-width: 767px)
      font-size: 30px
      margin-bottom: 34px

  &__items
    display: flex
    flex-wrap: wrap
    margin-left: -30px

  &__item
    width: 25%
    padding-left: 30px
    margin-bottom: 50px

    @media (max-width: 959px)
      width: 50%
      margin-bottom: 28px

    @media (max-width: 639px)
      width: 100% !important

    &:first-child
      width: 50%
      padding-right: 100px

      @media (max-width: 959px)
        padding-right: 0

  &__step
    font-size: 22px
    color: #4B4A4A
    font-family: $fonts.headings
    font-weight: 700
    line-height: 1.1
    margin-bottom: 15px

    span
      color: #3AA531

  &__desc
    font-size: 18px
    color: #4B4A4A
    font-weight: 400
    line-height: 1.4