.our-services
  .form-feedback--light
    .form-feedback__container
      padding-bottom: 0

  &--self
    padding-bottom: 18px

    & ^[0]
      &__section
        padding-top: 0 !important
        padding-bottom: 0 !important
        background: none !important

      &__controls
        top: 190px

        @media (max-width: 1279px)
          top: 60px

        @media (max-width: 959px)
          top: 380px

  &__section
    padding-top: 74px
    padding-bottom: 30px
    background-image: url('../img/bg2.png')
    background-repeat: no-repeat
    background-position: 50% 30%
    background-size: auto
    position: relative

    @media (max-width: 959px)
      padding-top: 41px
      background-image: url('../img/bg-mobile3.png')
      background-position: 100% 100%
      background-size: 100%

  &__inner
    position: relative

  h2
    font-size: 40px
    color: #0C0C0C
    font-family: $fonts.headings
    font-weight: 700
    line-height: 1.2
    text-align: center
    margin-top: 0
    margin-bottom: 75px

    @media (max-width: 767px)
      font-size: 30px
      margin-bottom: 36px

  &__controls
    display: flex
    align-items: center
    position: absolute
    top: 290px
    left: 720px

    @media (max-width: 1279px)
      top: 160px
      left: 550px

    @media (max-width: 959px)
      left: 20px
      top: 510px

    @media (max-width: 767px)
      top: 460px

    .swiper-button-prev, .swiper-button-next
      position: static
      margin: 0
      width: 37px
      height: 37px
      border-radius: 50%
      background-color: #BDBDBD
      transition: background-color 0.3s
      pointer-events: all

      &:hover
        background-color: #3AA531

      &:after
        content: ''
        width: 9px
        height: 15px
        background-image: url("data:image/svg+xml,%3Csvg width='9' height='15' viewBox='0 0 9 15' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M1.46484 13.5703L7.53516 7.5L1.46484 1.42969' stroke='white' stroke-width='1.15625' stroke-linecap='round' stroke-linejoin='round'/%3E%3C/svg%3E%0A")
        background-repeat: no-repeat
        background-position: 0 0
        background-size: contain

    .swiper-button-prev
      &:after
        transform: rotate(180deg)

    .swiper-pagination-fraction
      font-size: 18px
      color: #4B4A4A
      font-weight: 400
      line-height: 1
      letter-spacing: -1.5px
      margin-right: 16px
      margin-left: 16px
      position: static
      width: auto

  &__container
    margin-bottom: 82px

    @media (max-width: 959px)
      margin-bottom: 0
      padding-bottom: 60px

  &__body
    display: flex
    height: 636px

    @media (max-width: 1279px)
      height: 436px

    @media (max-width: 959px)
      display: block
      height: auto

  &__img
    flex: 0 0 570px
    width: 570px
    max-width: 570px
    height: 100%
    margin-right: 60px

    @media (max-width: 1279px)
      flex: 0 0 470px
      width: 470px
      max-width: 470px
      margin-right: 30px

    @media (max-width: 959px)
      width: 100%
      max-width: 100%
      height: 351px
      margin-bottom: 100px

    img
      vertical-align: top
      width: 100%
      height: 100%
      object-fit: cover

  &__content
    display: flex
    flex-direction: column
    justify-content: flex-end
    width: 387px
    padding-bottom: 105px
    padding-left: 67px
    border-left: 1px solid #BDBDBD

    @media (max-width: 1279px)
      padding-left: 30px
      padding-bottom: 50px

    @media (max-width: 959px)
      padding-left: 0
      padding-bottom: 0
      border-left: none
      max-width: 450px
      width: 100%

    h3
      font-size: 28px
      color: #0C0C0C
      font-weight: 700
      font-family: $fonts.headings
      line-height: 1.3
      margin-top: 0
      margin-bottom: 10px
      position: relative

      &:before
        content: ''
        position: absolute
        top: 0
        left: -70px
        width: 5px
        height: 49px
        background-color: #3AA531

        @media (max-width: 1279px)
          left: -33px

        @media (max-width: 959px)
          display: none

  &__desc
    font-weight: 400
    font-size: 18px
    line-height: 1.3
    color: #0C0C0C
    margin-bottom: 43px

    @media (max-width: 959px)
      margin-bottom: 35px

  &__button-order-cost
    align-self: flex-start